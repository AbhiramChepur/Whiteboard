<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="Service" />
    <bean id = "classservice"       class = "Service.ClassService"/>
    <bean id = "userservice"        class = "Service.UserService"/>
    <bean id = "taservice"          class = "Service.TaService"/>
    <bean id = "syllabusservice"    class = "Service.SyllabusService"/>
    <bean id = "scheduleservice"    class = "Service.ScheduleService"/>
    <bean id = "assignmentservice"  class = "Service.AssignmentService"/>

</beans>